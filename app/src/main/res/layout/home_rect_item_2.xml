<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_hone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:src="#EFEFEF"
        android:transitionName="myImage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="1234545678"
        android:id="@+id/text_wb"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/image_hone"
        app:layout_constraintStart_toStartOf="@+id/image_hone"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/image_hone"
        android:layout_marginTop="5dp"
        >

    </TextView>
</LinearLayout>